<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.36">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:text="Nazwa:"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </RelativeLayout>

        <EditText
            android:id="@+id/add_meal_name"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.84"
            android:inputType="text" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/logText_scroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_meal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <ListView
                android:id="@+id/add_meal_ingredients_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_meal_remove"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="UsuÅ„" />

                <Button
                    android:id="@+id/add_meal_add_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dodaj produkt" />

                <Button
                    android:id="@+id/add_meal_ok"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="OK" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>